<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/experimentViewName"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:textSize="35dp"
        android:hint="Experiment Name"/>

    <TextView
        android:id="@+id/experimentViewSuccess"
        android:layout_width="205dp"
        android:layout_height="30dp"
        android:layout_below="@id/experimentViewName"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:hint="Success/true: "/>

    <TextView
        android:id="@+id/experimentViewFail"
        android:layout_width="205dp"
        android:layout_height="30dp"
        android:layout_below="@id/experimentViewName"
        android:layout_toRightOf="@+id/experimentViewSuccess"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:hint="Fail/false: "/>

    <TextView
        android:id="@+id/totalTrialView"
        android:layout_width="205dp"
        android:layout_height="30dp"
        android:layout_below="@id/experimentViewSuccess"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:hint="Total Trial Count:"/>

    <TextView
        android:id="@+id/successRateView"
        android:layout_width="205dp"
        android:layout_height="30dp"
        android:layout_below="@id/totalTrialView"
        android:textAlignment="center"
        android:gravity="center_horizontal"
        android:hint="Success Rate:"/>

    <TextView
        android:id="@+id/descriptionView"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/experimentViewSuccess"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="200dp"
        android:layout_marginStart="100dp" />

    <Button
        android:id="@+id/experimentSuccessButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Success/True"
        android:layout_below="@+id/experimentViewSuccess"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="400dp"/>

    <Button
        android:id="@+id/experimentFailButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fail/false"
        android:layout_below="@+id/experimentViewSuccess"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="400dp"/>
</RelativeLayout>